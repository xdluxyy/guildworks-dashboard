  <!-- Mouse-reactive dots confined to the box -->
  <script>
    (function () {
      const box = document.querySelector('.premier-box');
      const canvas = document.querySelector('.premier-canvas');
      const ctx = canvas.getContext('2d');

      let dots = [];
      let mouse = { x: -9999, y: -9999, inside: false };

      function resizeCanvas() {
        const rect = box.getBoundingClientRect();
        canvas.width = Math.max(300, rect.width);
        canvas.height = Math.max(200, rect.height);
        initDots();
      }

      function initDots() {
        const count = Math.floor((canvas.width * canvas.height) / 14000) + 60; // density
        dots = Array.from({ length: count }, () => {
          const x = Math.random() * canvas.width;
          const y = Math.random() * canvas.height;
          return {
            x, y,
            bx: x, by: y, // base positions for gentle drift
            r: 1.1 + Math.random() * 1.1,
            spx: (Math.random() - 0.5) * 0.25,
            spy: (Math.random() - 0.5) * 0.25
          };
        });
      }

      function draw() {
        ctx.clearRect(0, 0, canvas.width, canvas.height);

        // gentle grid-ish tiny background specks for texture
        ctx.fillStyle = 'rgba(88,101,242,0.28)';
        ctx.globalAlpha = 0.35;
        for (let i = 0; i < 40; i++) {
          const x = (i * (canvas.width / 40)) + (i % 2 ? 0 : 8);
          const y = (i * (canvas.height / 40)) % canvas.height;
          ctx.fillRect(x % canvas.width, y, 1, 1);
        }
        ctx.globalAlpha = 1;

        // dots
        for (const d of dots) {
          // slight drift around base
          d.bx += d.spx * 0.2;
          d.by += d.spy * 0.2;

          // pull back toward bounds
          d.bx = Math.max(0, Math.min(canvas.width, d.bx));
          d.by = Math.max(0, Math.min(canvas.height, d.by));

          // attraction/repulsion to mouse when inside
          let dx = 0, dy = 0;
          if (mouse.inside) {
            dx = d.bx - mouse.x;
            dy = d.by - mouse.y;
            const dist = Math.hypot(dx, dy) || 1;
            const influence = Math.max(0, 120 - dist) / 120; // within 120px
            // push away a touch, then ease back
            d.x = d.bx + (dx / dist) * influence * 22;
            d.y = d.by + (dy / dist) * influence * 22;
          } else {
            // ease toward base when mouse leaves
            d.x += (d.bx - d.x) * 0.05;
            d.y += (d.by - d.y) * 0.05;
          }

          // base relaxer (keeps close to bx/by)
          d.x += (d.bx - d.x) * 0.08;
          d.y += (d.by - d.y) * 0.08;

          // draw
          ctx.beginPath();
          ctx.fillStyle = '#8ea0ff'; // brighter blurple dots
          ctx.arc(d.x, d.y, d.r, 0, Math.PI * 2);
          ctx.fill();
        }

        requestAnimationFrame(draw);
      }

      function trackMouse(e) {
        const rect = canvas.getBoundingClientRect();
        mouse.x = e.clientX - rect.left;
        mouse.y = e.clientY - rect.top;
        mouse.inside =
          mouse.x >= 0 && mouse.x <= rect.width &&
          mouse.y >= 0 && mouse.y <= rect.height;
      }

      window.addEventListener('resize', resizeCanvas);
      window.addEventListener('scroll', () => {
        // keep canvas sized to the visual box (in case of responsive changes)
        resizeCanvas();
      });

      box.addEventListener('mousemove', trackMouse);
      box.addEventListener('mouseleave', () => (mouse.inside = false));

      // init
      resizeCanvas();
      draw();
    })();
  </script>
