  <!-- DOTS SCRIPT -->
  <script>
    const canvas = document.getElementById('dots-bg');
    const ctx = canvas.getContext('2d');
    let dots = [], width, height, mouse = {x: -9999, y: -9999};

    function resize() {
      width = window.innerWidth;
      height = window.innerHeight;
      canvas.width = width;
      canvas.height = height;
      dots = [];
      for (let i = 0; i < 180; i++) {
        dots.push({
          x: Math.random() * width,
          y: Math.random() * height,
          r: Math.random() * 1.8 + 0.8,
          dx: (Math.random() - 0.5) * 0.4,
          dy: (Math.random() - 0.5) * 0.4
        });
      }
    }

    function animate() {
      ctx.clearRect(0, 0, width, height);
      for (let d of dots) {
        d.x += d.dx;
        d.y += d.dy;
        if (d.x < 0 || d.x > width) d.dx *= -1;
        if (d.y < 0 || d.y > height) d.dy *= -1;

        const dist = Math.hypot(d.x - mouse.x, d.y - mouse.y);
        if (dist < 120) {
          const angle = Math.atan2(d.y - mouse.y, d.x - mouse.x);
          d.x += Math.cos(angle);
          d.y += Math.sin(angle);
        }

        ctx.beginPath();
        ctx.arc(d.x, d.y, d.r, 0, Math.PI * 2);
        ctx.fillStyle = 'rgba(114,137,218,0.95)';
        ctx.fill();
      }
      requestAnimationFrame(animate);
    }

    window.addEventListener('mousemove', e => {
      mouse.x = e.clientX;
      mouse.y = e.clientY;
    });
    window.addEventListener('mouseleave', () => (mouse.x = -9999));
    window.addEventListener('resize', resize);
    resize();
    animate();
  </script>
