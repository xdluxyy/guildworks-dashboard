<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8"/>
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>GuildWorks</title>
  <link rel="stylesheet" href="/css/style.css"/>
</head>
<body>
  <!-- Header (unchanged) -->
  <header class="navbar">
    <div class="logo">
      <img src="/img/gw-logo.png" alt="GuildWorks Logo" class="logo-img"/>
      <span class="logo-text">Guild<span class="accent">Works</span></span>
    </div>
    <nav>
      <ul>
        <li><a href="#">Home</a></li>
        <li><a href="#">Features</a></li>
        <li><a href="#">Support</a></li>
      </ul>
    </nav>
    <a href="#" class="dashboard-btn">Dashboard</a>
  </header>

  <!-- Background dots canvas -->
  <canvas id="dots-bg"></canvas>

  <!-- Main content -->
  <main>
    <section class="hero">
      <div class="premier-box">
        <div class="holo-border"></div>
        <div class="premier-content">
          <h1>The <span class="accent">PREMIER</span> ticket solution for your community.</h1>
          <p>
            We provide expert ticket management designed to simplify your workflow, streamline communication,
            and ensure every request receives the care and efficiency it deserves.
          </p>
          <p>Our dashboard is coming soon. Check back here later…</p>
        </div>
      </div>
    </section>
  </main>

  <!-- Footer centered -->
  <footer>
    <div class="footer-centered">
      <h2>GUILD<span class="accent">WORKS</span></h2>
      <p>© 2025 GuildWorks Discord Solutions — Powered by <span class="accent">xdluxyy</span></p>
      <div class="footer-links-center">
        <a href="#">Privacy Policy</a>
        <span>•</span>
        <a href="#">Terms of Service</a>
      </div>
    </div>
  </footer>

  <script>
    // --- background dots ---
    const canvas = document.getElementById('dots-bg');
    const ctx = canvas.getContext('2d');
    let dots = [], mouse = {x:-999,y:-999}, width, height;

    function resize() {
      width = window.innerWidth;
      height = window.innerHeight;
      canvas.width = width;
      canvas.height = height;
      dots = [];
      for (let i = 0; i < 180; i++) {
        dots.push({
          x: Math.random() * width,
          y: Math.random() * height,
          r: Math.random() * 1.5 + 0.3,
          dx: (Math.random() - 0.5) * 0.3,
          dy: (Math.random() - 0.5) * 0.3
        });
      }
    }

    function animate() {
      ctx.clearRect(0,0,width,height);
      for (let d of dots) {
        d.x += d.dx;
        d.y += d.dy;
        if (d.x < 0 || d.x > width) d.dx *= -1;
        if (d.y < 0 || d.y > height) d.dy *= -1;
        const dist = Math.hypot(d.x - mouse.x, d.y - mouse.y);
        if (dist < 120) {
          const angle = Math.atan2(d.y - mouse.y, d.x - mouse.x);
          d.x += Math.cos(angle);
          d.y += Math.sin(angle);
        }
        ctx.beginPath();
        ctx.arc(d.x, d.y, d.r, 0, Math.PI * 2);
        ctx.fillStyle = 'rgba(114,137,218,0.7)';
        ctx.fill();
      }
      requestAnimationFrame(animate);
    }

    window.addEventListener('mousemove', e => {
      mouse.x = e.clientX;
      mouse.y = e.clientY;
    });
    window.addEventListener('mouseleave', () => mouse.x = -9999);
    window.addEventListener('resize', resize);
    resize();
    animate();
  </script>
</body>
</html>
