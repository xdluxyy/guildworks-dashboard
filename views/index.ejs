<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>GuildWorks Dashboard</title>
  <style>
    body {
      margin: 0;
      background-color: #090a11;
      overflow: hidden;
      font-family: 'Poppins', sans-serif;
      color: white;
    }

    canvas#dotCanvas {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 50%;
      z-index: 0;
    }

    .content-box {
      position: relative;
      z-index: 2;
      background: rgba(0, 0, 0, 0.75);
      border-radius: 20px;
      padding: 60px;
      margin: 180px auto;
      max-width: 900px;
      text-align: center;
      box-shadow: 0 0 60px rgba(88,101,242,0.2);
      overflow: hidden;
      transition: all 0.4s ease;
    }

    .content-box:hover {
      background: linear-gradient(120deg, rgba(88,101,242,0.3), rgba(141,160,255,0.25), rgba(88,101,242,0.3));
      box-shadow: 0 0 100px rgba(88,101,242,0.7);
    }

    .content-box::before {
      content: "";
      position: absolute;
      top: 0;
      left: -150%;
      width: 50%;
      height: 100%;
      background: linear-gradient(120deg, transparent, rgba(88,101,242,0.8), transparent);
      transform: skewX(-15deg);
      opacity: 0;
      transition: all 0.8s ease;
    }

    .content-box:hover::before {
      left: 150%;
      opacity: 1;
    }

    h1 {
      font-size: 2.5rem;
      font-weight: 700;
      color: white;
    }

    h1 span {
      color: #5865F2;
    }

    p {
      color: #bdbdbd;
      font-size: 1.1rem;
    }
  </style>
</head>
<body>
  <canvas id="dotCanvas"></canvas>

  <div class="content-box">
    <h1>The <span>PREMIER</span> ticket solution for your community.</h1>
    <p>We provide expert ticket management designed to simplify your workflow, streamline communication, and ensure every request receives the care and efficiency it deserves.</p>
    <p>Our dashboard is coming soon. Check back here later...</p>
  </div>

  <script>
    const canvas = document.getElementById("dotCanvas");
    const ctx = canvas.getContext("2d");
    let dots = [];
    const numDots = 150;
    let mouse = { x: null, y: null, radius: 120 };

    canvas.width = window.innerWidth;
    canvas.height = window.innerHeight / 2;

    window.addEventListener("resize", () => {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight / 2;
      createDots();
    });

    window.addEventListener("mousemove", (e) => {
      mouse.x = e.x;
      mouse.y = e.y;
    });

    class Dot {
      constructor(x, y, dx, dy, size) {
        this.x = x;
        this.y = y;
        this.dx = dx;
        this.dy = dy;
        this.size = size;
      }
      draw() {
        ctx.beginPath();
        ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
        ctx.fillStyle = "rgba(88,101,242,0.85)";
        ctx.fill();
      }
      update() {
        if (this.x + this.size > canvas.width || this.x - this.size < 0) this.dx = -this.dx;
        if (this.y + this.size > canvas.height || this.y - this.size < 0) this.dy = -this.dy;
        this.x += this.dx;
        this.y += this.dy;

        const dx = mouse.x - this.x;
        const dy = mouse.y - this.y;
        const distance = Math.sqrt(dx * dx + dy * dy);
        if (distance < mouse.radius) {
          this.x -= dx / 10;
          this.y -= dy / 10;
        }

        this.draw();
      }
    }

    function createDots() {
      dots = [];
      for (let i = 0; i < numDots; i++) {
        let size = Math.random() * 1.8 + 0.5;
        let x = Math.random() * canvas.width;
        let y = Math.random() * canvas.height;
        let dx = (Math.random() - 0.5) * 0.5;
        let dy = (Math.random() - 0.5) * 0.5;
        dots.push(new Dot(x, y, dx, dy, size));
      }
    }

    function animate() {
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      dots.forEach(dot => dot.update());
      requestAnimationFrame(animate);
    }

    createDots();
    animate();
  </script>
</body>
</html>
