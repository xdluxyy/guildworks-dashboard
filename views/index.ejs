<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>GuildWorks</title>
    <link rel="stylesheet" href="/css/style.css" />
    <style>
      html, body {
        height: 100%;
        display: flex;
        flex-direction: column;
      }

      main {
        flex: 1; /* ensures footer pushes to bottom */
      }

      footer {
        width: 100%;
        background: #0b0b14;
        color: #ccc;
        padding: 120px 5%;
        margin-top: auto;
        border-top: 1px solid rgba(255, 255, 255, 0.05);
        box-shadow: 0 -5px 40px rgba(124, 58, 237, 0.25);
      }

      .footer-container {
        max-width: 1400px;
        margin: 0 auto;
        display: flex;
        justify-content: center;
        align-items: flex-start;
        flex-wrap: wrap;
        gap: 100px;
        text-align: center;
      }

      .footer-column {
        flex: 1;
        min-width: 200px;
      }

      .footer-column h4 {
        color: #fff;
        margin-bottom: 14px;
        font-size: 1rem;
        letter-spacing: 0.5px;
      }

      .footer-column p {
        color: #999;
        font-size: 0.9rem;
        margin-bottom: 10px;
        transition: 0.3s;
      }

      .footer-column p:hover {
        color: #d8cfff;
        cursor: pointer;
      }

      .footer-column h4 .accent {
        color: #8b5cf6;
      }
    </style>
  </head>
  <body>
    <!-- NAVBAR -->
    <nav class="navbar">
      <div class="logo">
        <h1>Guild<span class="accent">Works</span></h1>
      </div>
      <ul class="nav-links">
  <li><a href="/" id="homeBtn">Home</a></li>
  <li><a href="/features">Features</a></li>
  <li><a href="https://discord.gg/gNkdKPJnmy" target="_blank">Support</a></li>
</ul>

      <a href="/dashboard" class="dashboard-btn">Dashboard</a>
    </nav>

    <!-- STARFIELD BACKGROUND -->
    <canvas id="starfield"></canvas>

    <!-- MAIN CONTENT -->
    <main id="home">
      <div class="main-section">
        <div class="main-box">
          <h1 class="rotating-title"></h1>
          <p class="rotating-desc"></p>
        </div>

        <div class="stats-container">
          <div class="stat-box">
            <h2>10</h2>
            <p>Servers Monitoring</p>
          </div>
          <div class="stat-box">
            <h2 id="uptime">95.69%</h2>
            <p>Bot Uptime</p>
          </div>
        </div>

        <div class="status-box">Connected to GuildWorks API ✅</div>
      </div>
    </main>

    <!-- FOOTER -->
    <footer>
      <div class="footer-container">
        <div class="footer-column">
          <h4>GUILD<span class="accent">WORKS</span></h4>
          <p>© 2025 GuildWorks Discord Solutions</p>
          <p>Powered by xdluxyy</p>
        </div>

        <div class="footer-column">
          <h4>Navigation</h4>
          <p>Home</p>
          <p>Services</p>
          <p>Support</p>
        </div>

        <div class="footer-column">
          <h4>Important</h4>
          <p>Terms of Service</p>
          <p>Privacy Policy</p>
        </div>

        <div class="footer-column">
          <h4>Products</h4>
          <p>Ticket System</p>
          <p>Verification</p>
          <p>Workflow Tools</p>
        </div>
      </div>
    </footer>

    <!-- SCRIPTS -->
    <script src="/js/starfield.js"></script>
    <script src="/js/main.js"></script>

    <script>
      const titleEl = document.querySelector('.rotating-title');
      const descEl = document.querySelector('.rotating-desc');
      const uptimeEl = document.querySelector('#uptime');

      const messages = [
        {
          title: 'The <span class="accent">cape</span> solution for your creativity.',
          desc: 'Custom cape designs that make your brand stand out — built by the GuildWorks creative team.'
        },
        {
          title: 'The <span class="accent">Discord</span> solution for your community.',
          desc: 'High-quality server creation and ticket automation tailored to your brand’s needs.'
        },
        {
          title: 'The <span class="accent">ticket</span> solution for your workflow.',
          desc: 'Effortless support management for teams and clients with automated tracking and logs.'
        },
        {
          title: 'The <span class="accent">server</span> solution for your projects.',
          desc: 'Fully managed, optimized Discord servers designed for business, community, or entertainment.'
        },
        {
          title: 'The <span class="accent">guild</span> solution for your growth.',
          desc: 'Streamline collaboration, enhance professionalism, and elevate your entire Discord presence.'
        }
      ];

      let index = 0;

      function updateMessage() {
        titleEl.style.opacity = 0;
        descEl.style.opacity = 0;
        setTimeout(() => {
          titleEl.innerHTML = messages[index].title;
          descEl.innerHTML = messages[index].desc;
          titleEl.style.opacity = 1;
          descEl.style.opacity = 1;
          index = (index + 1) % messages.length;
        }, 600);
      }

      function randomUptime() {
        uptimeEl.textContent = (95 + Math.random() * 4).toFixed(2) + '%';
      }

      updateMessage();
      setInterval(updateMessage, 5000);
      setInterval(randomUptime, 7000);

      document.getElementById('homeBtn').addEventListener('click', (e) => {
        e.preventDefault();
        document.getElementById('home').scrollIntoView({ behavior: 'smooth' });
      });

      window.addEventListener('scroll', () => {
        const navbar = document.querySelector('.navbar');
        if (window.scrollY > 20) {
          navbar.classList.add('scrolled');
        } else {
          navbar.classList.remove('scrolled');
        }
      });
    </script>
  </body>
</html>
